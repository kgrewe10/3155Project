<!DOCTYPE html>
<html>
  <head>
    <title>Gamesonline</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="signinout">
      <% if current_user %>
      <p><strong><%= current_user.name %></strong>
      <%= link_to "Logout", signout_path, id:"sign_out" %></p>
      <% else %>
      <%= link_to "Login", "/auth/google_oauth2", id:"sign_in" %>
      <% end %>
    </div>
    
    <div class="center">
    <script href="assets/javascripts/gamehover.js.erb"></script>
      <h1>GamesOnline</h1>
    <nav>
    <ul>
        <li><%= link_to "Home", '/home/index', id:"home" %></li>
        <li><%= link_to "All Games", '/games', id:"all_games" %></li>
        <li><%= link_to "Top Games", '/games/topgames.html', id:"top_games" %></li>
        <li><%= link_to "Upload Game", '/games/new', id:"upload_game" %></li>
    </ul>
    </nav>
    </div>
    <%= yield %>
  </body>
</html>
