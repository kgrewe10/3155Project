<%= form_for @game do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
 
  <p>
    <%= f.label :game_type %><br>
    <%= f.text_area :game_type %>
  </p>
 
 <p>
    <%= f.label :price %><br>
    <%= f.number_field :price %>
  </p>
  
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>
  
  <p>
    <%= f.label :onlinePlayers %><br>
    <%= f.number_field :onlinePlayers %>
  </p>
  
  <p>
    <%= f.label :offlinePlayers %><br>
    <%= f.number_field :offlinePlayers %>
  </p>
  
  <p>
    <%= f.label :platform %><br>
    <%= f.text_area :platform %>
  </p>
  
  <p>
    <%= f.label "Game Image" %><br>
    <%= f.file_field:image %>
  </p>
  
  <p>
    <%= f.submit %>
  </p>
<% end %>