<h2>Purchase Game</h2>
<div class="purchase_form">
<%= form_tag(root_path, method: "GET") do %> 
  <p>
    <img class="gameimg" src="<%=(url_for(@game.image))%>" alt="<%=@game.name%>", id="<%=@game.id%>")%>
  </p>
  <p>
    <strong>Name</strong>
    <%= @game.name %>
  </p>
  
 <p>
    <strong>Price</strong>
    <%= @game.price %>
  </p>
  
  <p>
    <strong>Platform</strong>
    <%= select_tag "platform", options_for_select(@platforms) %>
  </p>
    <p>
    <%= submit_tag("Purchase", data: { confirm: "Confirm purchase of " + @game.name + " for $" + ('%.2f' % @game.price).to_s } ) %>
  </p>
  <%= link_to 'Back', games_path %>
  <% end %>
  </div>
